BINARY=gorpcstress
VERSION=1.0.0

build:
	@echo "Construindo binário..."
	@go build -o bin/$(BINARY) ./cmd/gorpcstress

clean:
	@echo "Limpando binários..."
	@rm -rf bin/

install: build
	@echo "Instalando $(BINARY)..."
	@mkdir -p $(GOPATH)/bin
	@cp bin/$(BINARY) $(GOPATH)/bin/
	@echo "Instalado em $(GOPATH)/bin/$(BINARY)"
	@echo "Certifique-se que $(GOPATH)/bin está no seu PATH"

uninstall:
	@echo "Removendo $(BINARY)..."
	@rm -f $(GOPATH)/bin/$(BINARY)
	@echo "$(BINARY) removido"

test:
	@echo "Executando testes..."
	@go test -v ./...

lint:
	@echo "Verificando estilo..."
	@golangci-lint run

.PHONY: build clean install uninstall test lint